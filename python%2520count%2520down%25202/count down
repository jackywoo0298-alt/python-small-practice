def count_down():
    import time
    while True:
        try:
            start_count_time = int(input("Enter the seconds you want to count down(only integer,and ＞1): "))
            if start_count_time <= 1:
                print("Start count time should be more than 1")
            else:
                break
        except ValueError:
            print("ValueError,invalid input!")

    while True:
        try:
            interval_time = int(input("Enter the interval seconds you want to count down（only integer,and ＞0）: "))
            if interval_time <= 0:
                print("Interval time should be ＞0")
            elif interval_time > start_count_time:
                print("Interval time should be less than Start count time!")
            else:
                break
        except ValueError:
            print("ValueError,invalid input!")

    for x in range(start_count_time,0,-1):
        time.sleep(interval_time)
        seconds = x%60
        minutes = int(x/60)%60
        hours = int(x/60/60)%60
        print(f"{hours:02}:{minutes:02}:{seconds:02}")
        # print(f"00:00:{seconds:02}")

    print("done!")
count_down()
