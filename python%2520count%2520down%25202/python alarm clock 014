# python alarm clock
# target time
# current
# countdown
# play alarm song and finish program

import time
import datetime
import pygame

def set_alarm(target_time):
    print(f"the alarm time is {target_time}.")
    music_file = "speaker_test_sound.mp3"
    is_running = True
    while is_running:
        current_time = datetime.datetime.now().strftime("%H:%M:%S")
        print(current_time)
        time.sleep(1)
        if current_time == target_time:
            pygame.mixer.init()
            pygame.mixer.music.load(music_file)
            pygame.mixer.music.play()
            while pygame.mixer.music.get_busy():
                time.sleep(1)
            print("wake up!")
            is_running = False


if __name__ == "__main__":
    target_time = input("Enter your target time(H:M:S): ")
    set_alarm(target_time)
