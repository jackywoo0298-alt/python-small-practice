# python rock paper scissor game
# 1.dictionary
# 2.computer_random
# 3.user_random-
# 4.comparison
# 5.keep playing?
# 6.result,play rounds number.

def rock_paper_scissor():
    import random

    optionals = {"R": "✊", "P": "✋", "S": "✌️"}
    lose_times = 0
    total_times = 0
    draw_time =0

    while True:
        total_times += 1
        computer_random = random.choice(list(optionals.keys()))
        print(f"check{computer_random}")
        user_choice = input("pls enter your choice R/P/S(rock=✊, paper=✋,scissor=✌️)(‘E’ to exit): ").upper().strip()

        if user_choice == "E":
            print("EXIT! WELCOME TO PLAY AGAIN!")
            break

        elif user_choice in optionals.keys():
            print(f"your choice is {optionals[user_choice]}")
            print(f"computer choice is {optionals[computer_random]}")

            if user_choice==computer_random:
                print("Draw!")
                draw_time += 1
            elif user_choice =="R" and computer_random=="S":
                print("win")
            elif user_choice == "P" and computer_random == "R":
                print("win")
            elif user_choice == "S" and computer_random == "P":
                print("win")
            else:
                print("you lose!")
                lose_times += 1
        else:
            print(f"your input {user_choice} is invalid")

    print(f"you have win {total_times-lose_times-draw_time-1} times of out of {total_times-1} times!")

rock_paper_scissor()
